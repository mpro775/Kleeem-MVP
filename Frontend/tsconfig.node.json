{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"], // Node فقط
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "vite.config.*",
    "vitest.config*.ts",
    "eslint.config.*",
    "scripts/**/*.ts",
    "playwright.config.*"
  ],
  "exclude": ["src"] // ✅ أهم سطر
}
